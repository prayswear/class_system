<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Sex</th>
      <th>Mobile num</th>
      <th>Flat num</th>
      <th>Dorm num</th>
      <th>Room num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.sex %></td>
        <td><%= user.mobile_num %></td>
        <td><%= user.flat_num %></td>
        <td><%= user.dorm_num %></td>
        <td><%= user.room_num %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

